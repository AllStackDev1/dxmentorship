---
import BaseLayout from '../../layouts/BaseLayout.astro';
import CtaFive from '../../components/newsletter/Newsletter.astro';
import { AstroSeo } from '@astrolib/seo';
---

<AstroSeo
  title="Mentees | DXMentorship"
  description="Showcase of our current mentees"
  canonical="https://www.dxmentorship.com"
  openGraph={{
    url: 'https://www.dxmentorship.com',
    title: 'DXMentorship Mentees',
    description: 'Showcase of our current mentees',
    images: [
      {
        url: '/opengraph/mentees-og.png',
        width: 1200,
        height: 630,
        alt: 'Social open graph',
        type: 'image/jpeg',
      },
      {
        url: '/opengraph/mentees-og.png',
        width: 4096,
        height: 4096,
        alt: 'Twitter open graph',
        type: 'image/jpeg',
      },
      { url: '/opengraph/mentees-og.png' },
      { url: '/opengraph/mentees-og.png' },
    ],
    site_name: 'DXMentorship',
  }}
  twitter={{
    handle: '@dxmentorship',
    site: '@site',
    cardType: 'summary_large_image',
  }}
/>
<BaseLayout>
  <section>
    <div class="max-w-7xl px-8 md:px-12 lg:px-32 mx-auto py-32 lg:py-36 relative">
      <div class="max-w-2xl">
        <p class="text-sm text-transparent uppercase bg-gradient-to-r from-indigo-300 to-indigo-400 bg-clip-text">
          Cohort 4 Coming Soon
        </p>
        <p class="mt-8 text-4xl font-normal tracking-tighter text-white sm:text-5xl">
          Applications are now open for Cohort 4
        </p>
        <p class="mt-4 text-vulcan-300">
          Join our next cohort of amazing mentees! Applications are open until February 23, 2025.
        </p>
        <div class="mt-8">
          <a
            href="https://forms.gle/d6DNATNStTYkqVM89"
            class="inline-flex items-center justify-center px-6 py-3 text-sm font-semibold text-white transition-all rounded-lg hover:to-indigo-600 bg-gradient-to-b from-indigo-300 via-indigo-400 to-indigo-500"
          >
            Apply Now
          </a>
        </div>
      </div>
    </div>
  </section>

  <CtaFive />
</BaseLayout>
